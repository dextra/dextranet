<?xml version="1.0" encoding="UTF-8"?>
<engine>

	<template selector="#container_mais_posts">
		<ul class="list_stories" id="relacao_dos_posts">
			{for post in jsonArrayPost}
			<li class="clearfix">
				<div class="list_stories_headline_data">
					${converteData(post.data)}
			</div>
				<img src="" alt="photo" class="list_stories_avatar" />
				<div class="list_stories_headline clearfix">
					<h2>${post.titulo}</h2>
					<div class="list_stories_headline_comments">
						<span class="icon_comments"></span>
						${post.comentarios} coment√°rios
					</div>
					<div class="list_stories_headline_dx">
						<span class="icon_dx"></span>
						${post.likes}
					</div>
					<div class="list_stories_headline_author">
						<a href="#">${post.usuario}</a>
					</div>
				</div>
				<script>
				</script>
				<p id="${post.id}" class="list_stories_lead">
					${post.conteudo}
				</p>
				<div class="list_stories_footer clearfix">
					<div class="list_stories_footer_tags">
						<a href="#">HTML</a>
						,
						<a href="#">CSS</a>
					</div>
					<div id="${post.id}_button" class="list_stories_footer_call">
						<a href="#">+ Ver mais</a>
					</div>
				</div>
				{/for}
			</li>
		</ul><!-- .list_stories -->
	</template>

</engine>