<?xml version="1.0" encoding="UTF-8"?>
<engine>
	<template selector="#list_comments_fromPost" append="true">
	<br></br>
		<ul class="list_stories_comment" id="relacao_dos_comentarios">
			{for comment in jsonArrayComment}
			<li class="clearfix ${comment.postObjectJson.id}">
				<img src="" alt="photo" class="list_stories_comment_avatar" />
				<div class="list_stories_comment_headline clearfix">
					<div class="list_stories_comment_headline_author">
						<a href="#">${comment.postObjectJson.usuario}</a> <br />
						${converteData(comment.postObjectJson.dataDeCriacao)}
					</div>
					<!-- FUTURO COMENTARIO DO COMENTARIO (TREE) -->
<!--					<div class="list_stories_headline_comments">-->
<!--						<a id="clearfix" class="link">-->
<!--							<span class="icon_comments"></span>-->
<!--							0-->
<!--						</a>-->
<!--					</div>-->
					<div class="list_stories_headline_dx">

						<a id="${comment.postObjectJson.id}" class="linkCurtir comentario" original-title="${comment.postObjectJson.userLikes}" onClick="dextranet.curtir.curte(this)">

								<span class="icon_dx"></span>
								<span class="numero_comentario">${comment.postObjectJson.likes}</span>
						</a>
					</div>
				</div>
				<div id="${comment.postObjectJson.id}_post" class="list_stories_comment_lead">
					<p id="${comment.postObjectJson.id}">
						${comment.postObjectJson.conteudo}
					</p>
				</div>
			</li>
			{/for}
		</ul>
	</template>
	<script>
		$('.linkCurtir').tipsy({html:true});
	</script>
</engine>