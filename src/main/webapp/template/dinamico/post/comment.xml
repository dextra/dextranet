<?xml version="1.0" encoding="UTF-8"?>
<engine>
	<template selector=".esteAqui" append="true">
		<ul class="list_stories_comment" id="relacao_dos_posts">
			{for comment in jsonArrayComment}
			<li class="clearfix ${comment.id}">
				<div class="list_stories_headline_data">
					${converteData(comment.dataDeCriacao)}
				</div>
				<img src="" alt="photo" class="list_stories_avatar" />
				<div class="list_stories_headline clearfix">
					<div class="list_stories_headline_author">
						<a href="#">${comment.usuario}</a>
					</div>
				</div>
				<div id="${comment.id}_post" class="list_stories_lead">
					<p id="${comment.id}">
						${comment.conteudo}
					</p>
				</div>
			</li>
			{/for}
		</ul>
	</template>
</engine>