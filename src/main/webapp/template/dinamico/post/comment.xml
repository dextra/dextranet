<?xml version="1.0" encoding="UTF-8"?>
<engine>
	<template selector=".esteAqui" append="true">
		<ul class="list_stories" id="relacao_dos_posts">
			{for comment in jsonArrayComment}
			<li class="clearfix ${comment.id}">
				<div class="list_stories_headline_data">
					${converteData(comment.date)}
				</div>
				<img src="" alt="photo" class="list_stories_avatar" />
				<div class="list_stories_headline clearfix">
					<div class="list_stories_headline_author">
						<a href="#">${comment.autor}</a>
					</div>
				</div>
				<div id="${comment.id}_post" class="list_stories_lead">
					<p id="${comment.id}">
						${comment.text}
					</p>
				</div>
				<div class="list_stories_footer clearfix">
					<div class="list_stories_footer_tags">
						<a href="#">HTML</a>
						,
						<a href="#">CSS</a>
					</div>
					<div id="${comment.id}_button" class="list_stories_footer_call">
						${messages.link_readMore}
					</div>
				</div>
			</li>
			{/for}
		</ul>
	</template>
</engine>