<engine>

	<template selector="#relacao_dos_posts" append="true">
			{for post in jsonArrayPost}

			<li class="clearfix ${post.postObjectJson.id}">
				<div class="list_stories_headline_data">
					${converteData(post.postObjectJson.dataDeCriacao)}
				</div>
				<img src="" alt="photo" class="list_stories_avatar" />
				<div class="list_stories_headline clearfix">
					<h2 class="titulo ${post.postObjectJson.id}">${post.postObjectJson.titulo}</h2>
					<div class="list_stories_headline_comments">
						<a id="clearfix ${post.postObjectJson.id}" class="link">
							<span class="icon_comments"></span>
							<span class="numero_comentario">${post.postObjectJson.comentarios}</span>
							{if post.postObjectJson.comentarios == "1"}
								comentário
							{else}
								comentários
							{/if}
						</a>
					</div>
					<div class="list_stories_headline_dx">
						<a id="clearfix ${post.postObjectJson.id}" class="linkCurtir" original-title="${post.postObjectJson.userLike}">
						<span class="icon_dx"></span>
						<span class="numero_curtida">${post.postObjectJson.likes}</span>
						</a>
					</div>
					<div class="list_stories_headline_author">
						<a href="#">${post.postObjectJson.usuario}</a>
					</div>
				</div>
				<div id="${post.postObjectJson.id}_post" class="list_stories_lead" style="display:none;">
					<p id="${post.postObjectJson.id}">
						${post.postObjectJson.visibleText}
					</p>
				</div>
				<div class="list_stories_comments ${post.postObjectJson.id}">

				</div>
			</li>
			{/for}
	</template>

	<script>
		dextranet.home.descerComentario();
		dextranet.post.adicionaBotaoVerMais(this.jsonArrayPost);
		dextranet.comment.chamaAbreTelaComentario({html:true});
		dextranet.post.curtePost();
		$('.linkCurtir').tipsy();
	</script>
</engine>