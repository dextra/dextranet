<engine>

	<template selector="#relacao_dos_posts" append="true">
		{for post in jsonArrayPost}
			<li class="clearfix ${post.postObjectJson.id}">
				<div class="avatar-frame avatar-frame-small" title="Por ${post.postObjectJson.usuario}">
					<!-- @fixme se o usuário atual não possuir foto de perfil -->
						<span class="icon_avatarcommon_small"></span>
					<!-- @fixme senão, exibir foto aqui -->
						<!-- <img src="#" alt="Avatar" /> -->
				</div>
				<div class="speech-shape"></div>
				<div class="list_stories_headline clearfix">
					<h2 class="titulo ${post.postObjectJson.id}">${post.postObjectJson.titulo}</h2>
				</div>	
				
				<!-- Lead -->
				<div class="conteudo_inicial list_stories_lead hyphenize">${conteudoDeExibicao(post.postObjectJson.conteudo)}</div>
				
				<!-- Conteúdo completo do post -->
				<div id="${post.postObjectJson.id}_post" class="list_stories_lead" style="display:none;">
					<p id="${post.postObjectJson.id}">
						${post.postObjectJson.conteudo}
					</p>
				</div>
				
				<!-- Comentários -->
				<div class="list_stories_comments">
					<a id="${post.postObjectJson.id}">
						<span class="icon_comments"></span>
						<span class="numero_comentario">${post.postObjectJson.comentarios}</span>
						{if post.postObjectJson.comentarios == "1"}
							comentário
						{else}
							comentários
						{/if}
					</a>
				</div>
				
				<!-- Curtidas -->
				<div class="list_stories_dx">
					<a id="${post.postObjectJson.id}" class="clearfix linkCurtir post" original-title="${post.postObjectJson.userLike}" onClick="dextranet.curtir.curte(this)">
						<span class="icon_dx"></span>
						<span class="numero_curtida">${post.postObjectJson.likes}</span>
					</a>
				</div>
				
				<!-- Comentários -->
				<div class="list_stories_comments ${post.postObjectJson.id}">

				</div>	
			
				<!-- Menu de ações -->
				<div class="list_stories_actions">
					<button class="btn btn-small">
						Ações <span class="arrowdown"></span>
					</button>
					<ul class="menu-light">
						<li class="menu-light-thickbottom">
							<a href="#">
								<span class="icon_icon-edit"></span>
								Editar
							</a>
						</li>
						<li>
							<a href="#">
								<span class="icon_icon-trash"></span>
								Remover
							</a>
						</li>
					</ul>
				</div>
				
			</li>
		{/for}
	</template>

	<script>
		dextranet.post.inicializa();
	</script>
</engine>