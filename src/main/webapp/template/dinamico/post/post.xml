<engine>

	<template selector="#content_left">
			<div id="container_mensagem" class="clearfix"></div>
			<div id="container_post" class="clearfix">
			<ul class="list_stories" id="relacao_dos_posts">
				
			{for post in jsonArrayPost}
			<li class="clearfix ${post.postObjectJson.id}">
				<div class="box_list_headline_comments_author" >
					<div class="list_stories_headline_comments">
						<a id="${post.postObjectJson.id}" class="link clearfix">
							<span class="icon_comments"></span>
							<span class="numero_comentario">${post.postObjectJson.comentarios}</span>
							{if post.postObjectJson.comentarios == "1"}
								comentário
							{else}
								comentários
							{/if}
						</a>
					</div>
					<div class="list_stories_headline_dx">
						<a id="${post.postObjectJson.id}" class="clearfix linkCurtir post" original-title="${post.postObjectJson.userLike}" onClick="dextranet.curtir.curte(this)">
							<span class="icon_dx"></span>
							<span class="numero_curtida">${post.postObjectJson.likes}</span>
						</a>
					</div>
					<div class="list_stories_headline_author">
						por <a href="#">${post.postObjectJson.usuario}</a>
					</div>
				</div>
				<div class="list_stories_headline clearfix">
					<img src="" class="list_stories_avatar" />
					<h2 class="titulo ${post.postObjectJson.id}">${post.postObjectJson.titulo}</h2>
					<span class="conteudo_inicial list_stories_lead">${conteudoDeExibicao(post.postObjectJson.conteudo)}</span>
					<div id="${post.postObjectJson.id}_post" class="list_stories_lead" style="display:none;">
						<p id="${post.postObjectJson.id}">
							${post.postObjectJson.conteudo}
						</p>
					</div>
				</div>	
				<div class="list_stories_comments ${post.postObjectJson.id}">

				</div>	
				<div class="list_stories_footer clearfix">
					<div class="list_stories_footer_tags">
						<a href="#">HTML</a>, <a href="#">CSS</a>
					</div>
					<div class="list_stories_footer_call">
						<a href="#">+ Ver mais</a>
					</div> 
				</div>
			</li>
			{/for}
			</ul>
			</div>
	</template>

	<script>
		dextranet.post.inicializa();
	</script>
</engine>