<?xml version="1.0" encoding="UTF-8"?>
<engine>
	<template selector="#container-main">

		<!-- Sidebar do lado direito -->
		<div id="sidebar-right" rel="section">
		</div><!-- #sidebar-right -->

		<form action="" id="form-search">
			<input type="text" id="form-search-input" />
			<input type="submit" value="" title="Procurar!" id="form-search-submit" />
		</form>

		<!-- Listagem de estorias da Intranet -->
		<ul class="list-stories">
		${paginacaoDosPost()}
			{for post in jsonArrayPost}
			<li class="clearfix">
				<div class="list-stories-lead">
					${converteData(post.data)}
				</div>
				<img src="" alt="photo" class="list-stories-avatar" />
				<div class="list-stories-headline clearfix">
					<h2>${post.titulo}</h2>
					<div class="list-stories-headline-comments">
						<span class="icon-comments"></span>
						${post.comentarios} coment√°rios
					</div>
					<div class="list-stories-headline-dx">
						<span class="icon-dx"></span>
						${post.likes}
					</div>
					<div class="list-stories-headline-author">
						por
						<a href="#">${post.usuario}</a>
					</div>
				</div>
				<p class="list-stories-lead">
					${post.conteudo}
				</p>
				<div class="list-stories-footer clearfix">
					<div class="list-stories-footer-tags">
						<a href="#">HTML</a>
						,
						<a href="#">CSS</a>
					</div>
					<div class="list-stories-footer-call">
						<a href="#">+ Ver mais</a>
					</div>
				</div>
			</li>
			{/for}
		</ul><!-- .list-stories -->
	</template>
</engine>