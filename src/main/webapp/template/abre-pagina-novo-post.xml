<?xml version="1.0" encoding="UTF-8"?>
<engine>
	<template selector="#container-main">
		<div id="div-bonito">
			<form action="" id="form-new-post">
				<input size="51" type="text" id="form-input-title"
					placeholder="Digite o título do post"></input>
				<br />
				<textarea cols="50" id="form-input-content" style="resize:none"
					placeholder="Digite o conteúdo do post"></textarea>
				<br />
				<input type="submit" value="Postar" id="form-post-submit" />
			</form>
		</div>
	</template>
	<script>
		CKEDITOR.replace('form-input-content');
		$("#form-new-post").submit(criaNovoPost);
	</script>
</engine>
