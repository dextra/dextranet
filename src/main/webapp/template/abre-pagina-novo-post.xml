<?xml version="1.0" encoding="UTF-8"?>
<engine>
	<template selector="#container-main">
		<div id="div-bonito">
			<form action="" id="form-new-post">
				<input size="51" type="text" id="form-input-title"
					placeholder="Digite o título do post" name="title"></input>
				<br />
				<textarea cols="50" id="form_input_content" style="resize:none"
					placeholder="Digite o conteúdo do post" name="content"></textarea>
				<br />
				<input type="button" value="Postar" id="form-post-submit" />
			</form>
		</div>
	</template>

	<script>
		CKEDITOR.replace('form_input_content');
		$("#form-post-submit").click(criaNovoPost);
	</script>
</engine>
