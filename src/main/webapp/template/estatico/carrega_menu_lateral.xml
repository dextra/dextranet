<?xml version="1.0" encoding="UTF-8"?>
<engine>
	<template selector="#sidebar_left">
		<ul id="sidebar_left_menu">
			<li id="sidebar_left_home" class="active">
				<a href="#" id="button_sidebar_left_home">
					<span class="icon_sidebar_left_home"></span>
					${messages.label_home}
				</a>
			</li>
			<li id="sidebar_left_new_post">
				<a href="#" id="button_sidebar_left_novopost">
					<span class="icon_sidebar_left_novopost"></span>
					${messages.label_newPost}
				</a>
				<ul id="box_new_post" class="sidebar_show_right">
					<li>
						<form action="" id="form_new_post">
							<input width="98%" type="text" id="form_input_title"
								placeholder="${messages.placeholder_title_post}" name="title"></input>
							<br />
							<textarea cols="50" id="form_input_content" style="resize:none;"
								placeholder="${messages.placeholder_content_post}" name="content"></textarea>
							<br />
								<input type="submit" class="submit" value="${messages.button_newPost}" id="form_post_submit" />
						</form>
					</li>
				</ul>
			</li>
			<li id="sidebar_left_category">
				<a href="#" id="button_sidebar_left_category">
					<span class="icon_sidebar_left_categoria"></span>
					${messages.label_category}
				</a>
			</li>
			<li id="sidebar_left_profile">
				<a href="#" id="button_sidebar_left_profile">
					<span class="icon_sidebar_left_perfil"></span>
					${messages.label_profile}
				</a>
			</li>
			<li id="sidebar_left_team">
				<a href="#" id="button_sidebar_left_team">
					<span class="icon_sidebar_left_equipe"></span>
					${messages.label_team}
				</a>
			</li>
		</ul>
	</template>
	<script>
		$("#button_sidebar_left_home").click(dextranet.home.carregaDadosSemParametro);
		$("#button_sidebar_left_novopost").click(dextranet.home.abrePopUpNovoPost);
		$("#button_sidebar_left_category").click(dextranet.home.abrePaginaCategoria);
		$("#button_sidebar_left_profile").click(dextranet.home.abrePaginaPerfil);
		$("#button_sidebar_left_team").click(dextranet.home.abrePaginaEquipe);
		$("#form_new_post").submit(dextranet.post.criaNovoPost);

		CKEDITOR.replace('form_input_content',{removePlugins:'elementspath',height:"230", width:"100%"});
		CKEDITOR.config.contentsCss = 'ckeditor/body.css';
	</script>
</engine>