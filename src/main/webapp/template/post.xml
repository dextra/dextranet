<engine>
	<template selector=".list-stories">
		{for post in jsonArrayPost}
			<li class="clearfix">
					<img src="" alt="photo" class="list-stories-avatar" />
					<div class="list-stories-headline clearfix">
						<h2>${post.titulo}</h2>
						<div class="list-stories-headline-comments">
							<span class="icon-comments"></span>5 coment√°rios
						</div>
						<div class="list-stories-headline-dx">
							<span class="icon-dx"></span>99
						</div>
						<div class="list-stories-headline-author">
							por <a href="#">${post.usuario}</a>
						</div>
					</div>
					<p class="list-stories-lead">
						${post.conteudo}
					</p>
					<div class="list-stories-footer clearfix">
						<div class="list-stories-footer-tags">
							<a href="#">HTML</a>, <a href="#">CSS</a>
						</div>
						<div class="list-stories-footer-call">
							<a href="#">+ Ver mais</a>
						</div>
					</div>
				</li>
			{/for}
	</template>
</engine>