<engine>

	<template selector="#container_post" append="true">
		<img src="../img/carregando.gif" id="form_gif_loading" style="display:none"></img>
		<ul class="message">
			{if sucesso}
			<li class="success" style="display: list_item;">Seu post foi inserido com sucesso.</li>
			{/if}
		</ul>

		<ul class="list_stories" id="relacao_dos_posts">
			{for post in jsonArrayPost}

			<li class="clearfix ${post.id}">
				<div class="list_stories_headline_data">
					${converteData(post.postObjectJson.data)}
				</div>
				<img src="" alt="photo" class="list_stories_avatar" />
				<div class="list_stories_headline clearfix">
					<h2>${post.postObjectJson.titulo}</h2>
					<div class="list_stories_headline_comments">
						<a id="clearfix ${post.postObjectJson.id}" class="link">
							<span class="icon_comments"></span>
							${post.postObjectJson.comentarios} coment√°rios
						</a>
					</div>
					<div class="list_stories_headline_dx">
						<span class="icon_dx"></span>
						${post.postObjectJson.likes}
					</div>
					<div class="list_stories_headline_author">
						<a href="#">${post.postObjectJson.usuario}</a>
					</div>
				</div>
				<div id="${post.postObjectJson.id}_post" class="list_stories_lead">
					<p id="${post.postObjectJson.id}">
						${post.postObjectJson.visibleText}
					</p>
				</div>
				<div class="list_stories_footer clearfix">
					<div class="list_stories_footer_tags">
						<a href="#">HTML</a>
						,
						<a href="#">CSS</a>
					</div>
					<br/>
					<div class="list_stories_comments ${post.postObjectJson.id}">

					</div>
				</div>
			</li>
			{/for}
		</ul>
	</template>

	<script>
		chamaAbreTelaComentario();
		carregaOpcaoVerMais(".list_stories_lead");
	</script>
</engine>